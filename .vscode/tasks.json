{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clippy (Rust)",
            "type": "shell",
            "command": "cargo clippy",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Rustfmt",
            "type": "shell",
            "command": "cargo fmt --all -- --check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Run Tests (Rust)",
            "type": "shell",
            "command": "cargo test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        }
    ]
}